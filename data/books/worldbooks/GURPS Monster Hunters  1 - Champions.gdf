//  EQUIPMENT MODIFIERS
// [MODIFIERS]
*******************************************************************************************************\[START]

<_MH Melee Weapons>

// 
//  Known Issue: Adding Titanium to either Fine or Very Fine applies a cumulative "break" modifier
// 

"Balanced", +4 CF, gives(=+1 to owner::skillscore), group(_MH Melee Weapons), page(MH1:59)
"Disguised", +4 CF, group(_MH Melee Weapons), page(MH1:59)
"Fine", +0%, group(_MH Melee Weapons), page(MH1:59),_
	gives(=+@textindexedvalue( $modetag(damtype), ("cut", 1), ("imp", 1) ) to owner::damage$ listAs "+1 to cut/imp damage from Fine", -1 to owner::break)
"Holy", +4 CF, group(_MH Melee Weapons), page(MH1:59)
"Silver", +19 CF, group(_MH Melee Weapons), page(MH1:59)
"Silver-Coated", +2 CF, group(_MH Melee Weapons), page(MH1:60)
"Titanium", +1 CF, gives(*3/4 to owner::baseweight, -2 to owner::break), group(_MH Melee Weapons), page(MH1:60)
"Very Fine", +19 CF, group(_MH Melee Weapons), page(MH1:60),_
	gives(=+@textindexedvalue( $modetag(damtype), ("cut", 2), ("imp", 2) ) to owner::damage$ listAs "+2 to cut/imp damage from Very Fine", -2 to owner::break)
"Weighted", +1 CF, gives(=+1 to owner::damage$ listAs "+1 to damage from Weighted"), group(_MH Melee Weapons), page(MH1:59)
_Perk: Weapon Bond, 0, shortname(Weapon Bond), gives(+1 to owner::skillscore), group(_MH Melee Weapons), page(MH1:25)

_Advantage: Weapon Master Damage Bonus, +0, shortname(Weapon Master Damage Bonus), group(_MH Melee Weapons),_
	gives(_
		=+@if(_
			$modetag(charskillscore) _
				-@hasmod(_Perk: Weapon Bond) _
				-@hasmod(Low-Tech Weapon Quality: Balanced) _
				-@hasmod(Dungeon Fantasy: Quality: Balanced) _
				+@hasmod(Low-Tech Weapon Quality: Poorly Balanced) _
				= ST:DX+1 _
			THEN @textindexedvalue($modetag(dmg), ("thr", owner::basethdice), ("sw", owner::baseswdice), ELSE $solver(owner::dmg)) _
			ELSE @if(_
				$modetag(charskillscore) _
					-@hasmod(_Perk: Weapon Bond) _
					-@hasmod(Low-Tech Weapon Quality: Balanced) _
					-@hasmod(Dungeon Fantasy: Quality: Balanced) _

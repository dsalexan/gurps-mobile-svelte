{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["@league-of-foundry-developers/foundry-vtt-types", "vite/client"],
    "typeRoots": [ "./types" ],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    /**
     * Typecheck JS in `.svelte` and `.js` files by default.
     * Disable checkJs if you'd like to use dynamic types in JS.
     * Note that setting allowJs false does not prevent the use
     * of JS in `.svelte` files.
     */
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": ["types/**/*.d.ts", "src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "svelte.config.js", "rollup.config.js", ".eslintrc.cjs", "stylelint.config.js", "gulpfile.mjs"],
  "exclude": ["node_modules/*", "static/*", "dist/*", "data/*", "scripts/*"]
}
